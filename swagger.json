{
  "openapi": "3.0.0",
  "info": {
    "title": "Social Media API",
    "description": "A RESTful API for a social media application including users, posts, comments, likes, bookmarks, drafts, and sorting.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        }
      },
      "NewUser": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        }
      },
      "LoginCredentials": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "user": { "$ref": "#/components/schemas/User" },
          "token": { "type": "string" }
        }
      },
      "Post": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "caption": { "type": "string" },
          "imageUrl": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["published", "draft", "archived"]
          },
          "bookmarks": {
            "type": "array",
            "items": { "type": "integer" }
          }
        }
      },
      "Comment": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "postId": { "type": "integer" },
          "content": { "type": "string" }
        }
      },
      "Like": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "postId": { "type": "integer" }
        }
      }
    }
  },
  "paths": {
    "/api/users/sign-up": {
      "post": {
        "tags": ["User"],
        "summary": "Register user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/NewUser" }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" },
          "409": { "description": "Email exists" }
        }
      }
    },

    "/api/users/sign-in": {
      "post": {
        "tags": ["User"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginCredentials" }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },

    "/api/posts": {
      "get": {
        "tags": ["Post"],
        "summary": "Get posts (filter, sort, paginate)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "caption", "in": "query", "schema": { "type": "string" } },
          { "name": "page", "in": "query", "schema": { "type": "integer" } },
          {
            "name": "sortBy",
            "in": "query",
            "schema": { "type": "string", "enum": ["date", "engagement"] }
          },
          {
            "name": "order",
            "in": "query",
            "schema": { "type": "string", "enum": ["asc", "desc"] }
          }
        ],
        "responses": {
          "200": { "description": "Posts fetched" }
        }
      },
      "post": {
        "tags": ["Post"],
        "summary": "Create post (draft/published)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "caption": { "type": "string" },
                  "image": { "type": "string", "format": "binary" },
                  "status": {
                    "type": "string",
                    "enum": ["published", "draft"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Post created" }
        }
      }
    },
    "/api/posts/{id}": {
      "put": {
        "tags": ["Post"],
        "summary": "Update post",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "caption": {
                    "type": "string",
                    "example": "Updated caption"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Post updated" },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/api/posts/status/{id}": {
      "put": {
        "tags": ["Post"],
        "summary": "Update post status",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["status"],
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["draft", "published", "archived"],
                    "example": "draft"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Status updated" },
          "400": { "description": "Invalid status provided" }
        }
      }
    },
    "/api/posts/bookmark/{id}": {
      "get": {
        "tags": ["Post"],
        "summary": "Toggle bookmark",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Bookmark toggled" }
        }
      }
    },

    "/api/comments/post/{postId}": {
      "get": {
        "tags": ["Comment"],
        "summary": "Get comments for a post",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Comments fetched" }
        }
      },
      "post": {
        "tags": ["Comment"],
        "summary": "Add comment",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Comment added" }
        }
      }
    },

    "/api/comments/{commentId}": {
      "put": {
        "tags": ["Comment"],
        "summary": "Update a comment",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content"],
                "properties": {
                  "content": {
                    "type": "string",
                    "example": "Updated comment text"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Comment updated" },
          "400": { "description": "Content is required" },
          "404": { "description": "Comment not found" }
        }
      },
      "delete": {
        "tags": ["Comment"],
        "summary": "Delete a comment",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Comment deleted" },
          "404": { "description": "Comment not found" }
        }
      }
    },
    "/api/likes/toggle/{postId}": {
      "get": {
        "tags": ["Like"],
        "summary": "Toggle like",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Like toggled" }
        }
      }
    },

    "/api/likes/{postId}": {
      "get": {
        "tags": ["Like"],
        "summary": "Get likes for post",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Likes fetched" }
        }
      }
    }
  }
}
